<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Subject" />

        <TextView
            android:id="@+id/tvIssuer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issuer"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvValidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valid from - to"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvSerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Serial (hex)"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvFingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHA-256:"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvCompareHex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compared hex:"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
